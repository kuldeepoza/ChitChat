<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainToolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:titleTextColor="@color/white_1000"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userHeaderprofile"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_user"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/userHeaderName"
            android:layout_weight="7"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="ChitChat"/>
<ImageView
    android:id="@+id/userLogout"
    android:layout_gravity="center"
    android:layout_weight="2"
    android:layout_width="0dp"
    android:src="@drawable/user_logout"
    android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/userProfileRedirect"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:src="@drawable/ic_action_name"
            android:layout_height="45dp" />
<!--<Spinner
    android:id="@+id/spinner"
    android:textAlignment="center"
    android:backgroundTint="@color/white_1000"
    android:layout_gravity="left"
    android:layout_weight="2"
    android:layout_width="0dp"
    android:entries="@array/userSpinnerValues"
    android:layout_height="match_parent"/>-->
    </LinearLayout>

</android.support.v7.widget.Toolbar>
