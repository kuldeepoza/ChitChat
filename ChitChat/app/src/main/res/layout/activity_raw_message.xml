<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:padding="3dp"
                        android:background="@color/leftMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvLeft"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/white_1000"
                            android:text=""
                            android:textSize="20dp" />
                        <TextView
                            android:textColor="@color/white_1000"
                            android:gravity="right"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvLefttym"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="12:10"
                            android:textSize="15dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:minHeight="40dp"
        android:visibility="gone"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="7"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:padding="5dp"
                            android:background="@color/rightMag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tvRight"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@color/white_1000"
                                android:textSize="20dp" />
                            <TextView
                                android:textColor="@color/white_1000"
                                android:gravity="right"
                                android:paddingRight="8dp"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tvRighttym"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="12:10"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLeftImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:padding="3dp"
                        android:background="@color/trans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/ivChatLeft"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />
                        <ProgressBar
                            android:id="@+id/pbChatLeft"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <TextView
                        android:paddingRight="10dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white_1000"
                        android:gravity="bottom|right"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvLefttymImage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="12:10"
                        android:layout_marginBottom="10dp"
                        android:textSize="15dp" />
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRightImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:minHeight="40dp"
        android:visibility="gone"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="7"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/trans"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/ivChatRight"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="fitXY" />

                            <ProgressBar
                                android:id="@+id/pbChatRight"
                                android:layout_marginTop="50dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvRighttymImage"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="bottom|right"
                            android:paddingRight="8dp"
                            android:text="12:10"
                            android:textColor="@color/white_1000"
                            android:textSize="15dp" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>