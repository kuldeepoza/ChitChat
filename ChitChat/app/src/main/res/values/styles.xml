<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="UserProfile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<style name="NoStatusBar" parent="android:Theme.Holo.NoActionBar.Fullscreen">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //RegistrationEditText
    <style name="RegEt" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:textColor">@color/white_1000</item>
        <item name="android:textColorHint">@color/white_1000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableTint">@color/blue_200</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    //RegistrationTextView
    <style name="RegTv">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_1000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    //LinearLayoutVertical
    <style name="LinLayVertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    //LinearLayoutHorizontal
    <style name="LinLayHorizontal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    //Button
    <style name="RegBtn" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/reg_btn_round</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">Submit</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:textColor">@color/white_1000</item>
    </style>
</resources>
